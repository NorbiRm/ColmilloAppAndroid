<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfileActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="348dp"
            android:layout_height="297dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerViewFotosUser"
            app:layout_constraintHorizontal_bias="0.507"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="347dp"
            android:layout_height="369dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/recyclerViewFotosUser" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <ImageView
                android:layout_width="401dp"
                android:layout_height="273dp" tools:srcCompat="@tools:sample/backgrounds/scenic[1]"
                android:id="@+id/imagePortada" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:contentDescription="TODO"/>
        <TextView
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="39dp" android:id="@+id/nombreUser" android:textSize="18sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Followers:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/followersUser" android:layout_weight="1"/>
            <TextView
                    android:text="Following:"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/followingUser" android:layout_weight="1"
            />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>